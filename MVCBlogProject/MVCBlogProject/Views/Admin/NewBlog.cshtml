@model MVCBlogProject.Models.Blog
@{
    ViewBag.Title = "Yeni Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Yeni Blog Ekleme Sayfası</h2>
<form method="post" class="form-group">
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.BlogHeading, new { @class = "form-control-file" })
    <br />
    <label>Resim</label>
    @*<input type="file" name="BlogImage" />*@
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control-file" })
    <br />
    <label>Tarih</label>
    @Html.TextBoxFor(x => x.Date, new { @class = "form-control-file" })
    <br />
    <label>Açıklama</label>
    @Html.TextAreaFor(x => x.BlogDescription, 15, 1, new { @class = "form-control-file", id = "summernote" })
    <br />

    <label>Yazar Adı</label>
    @Html.TextBoxFor(x => x.AuthorName, new { @class = "form-control-file" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control-file" })
    <br />

    @*@Html.Label("Açıklama:")
        @Html.TextAreaFor(x => x.Description, new { @name = "editor", @class = "editor1", @id = "editor", @rows = "10", @cols = "80" })*@
    <button id="btn1" class="btn btn-primary">Ekle</button>
    <script>
        $('#btn1').click(function () {
            swal("Başarılı", "Ekleme İşlemi Başarıyla Gerçekleşti!", "success")
        });
    </script>
</form>


    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>

    
    <script>
        $('#summernote').summernote({
            placeholder: 'Metin Girin',
            tabsize: 2,
            height: 120,
            toolbar: [
                ['style', ['style']],
                ['font', ['bold', 'underline', 'clear']],
                ['color', ['color']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['table', ['table']],
                ['insert', ['link', 'picture', 'video']],
                ['view', ['fullscreen', 'codeview', 'help']]
            ]
        });
    </script>
