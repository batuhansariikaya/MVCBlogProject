@model MVCBlogProject.Models.Category
@{
    ViewBag.Title = "Kategori Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Düzenle</h2>

<br />
@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control-file", })
    <br />
    <label>Kategori ID</label>
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control-file", @readonly="readonly"})
    <br />
    <label>Kategori Durum</label>
    @Html.TextBoxFor(x => x.CategoryStatus, new { @class = "form-control-file", })
    <br />

    <button class="btn btn-primary">Güncelle</button>
}




