
<div class="col-lg-12">
    <div class="sidebar-item submit-comment">
        <div class="sidebar-heading">
            <h2>Yorum Yap</h2>
        </div>
        <div class="content">
            @using (Html.BeginForm("Comment", "Main", FormMethod.Post))
            {
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <fieldset>
                        <input name="BlogID" type="hidden" id="name" value="@ViewBag.value" required="">
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <input name="CommentUserName" type="text" id="name" placeholder="Kullanıcı Adı" required="">
                    </fieldset>
                </div>
                <div class=" col-lg-12">
                    <fieldset>
                        <input name="CommentMail" type="text" id="email" placeholder="Mail Adresi" required="">
                    </fieldset>
                </div>

                <div class="col-lg-12">
                    <fieldset>
                        <textarea name="Comments" rows="6" id="message" placeholder="Yorumunuz" required=""></textarea>
                    </fieldset>
                </div>
                <div class="col-lg-12">
                    <fieldset>
                        <button type="submit" id="form-submit" class="main-button">Paylaş</button>
                    </fieldset>
                </div>
            </div>
            }
        </div>
    </div>
</div>
