@using MVCBlogProject.Models
@model List<About> 
@{
    ViewBag.Title = "Hakkımda Düzenleme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda</h2>
<table class="table table-bordered">
    <tr>
        <th>Metin</th>
        <th>Düzenle</th>
    </tr>
    <tr>
        @foreach (var item in Model)
        {
            <td>@item.AboutDescription</td>
            <td><a class="btn btn-info" href="/About/GetAbout/@item.AboutID">Güncelle</a></td>
        }
    </tr>
</table>

